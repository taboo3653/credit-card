{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "components": ["components"],
      "assets": ["assets"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
